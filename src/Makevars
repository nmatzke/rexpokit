PKG_FFLAGS = -w
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS)


R_OBJS = \
    expokit/blas_mod.o \
    expokit/mataid.o \
    expokit/my_expokit.o \
    expokit/my_matexp.o \
    lapack.o \
